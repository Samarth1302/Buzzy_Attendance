<%- include('partials/header') %>

    <div class="row">
        <div class="col-lg-7 col-sm-12 h-100 sign-up">
            <div class="logo">
                <img src="images/logo.png" alt="Company-logo">
            </div>
            <div class="">
                <h3 class="mb-0 cursive">Buzzy Attendance</h3>
                <p class="mt-0" style="color: gray;">Fast-forward the attendance process</p>
            </div>
        </div>
    
        <div class="col-lg-5 col-sm-12 h-100 sign-in">
            <div class="l-account">
                <h4 class="cursive" style="margin-bottom: 10%;">Login to your account</h4>
                <br>
                <form action="/" method="post">
                    <div class="form-group">
                        <label class="h6 mb-1" style="float: left;">Email</label>
                        <input type="email" name="email" class="form-control text-box login shadow-none"
                            id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Your Email">
                    </div>
                    <div class="form-group mt-3">
                        <label class="h6 mb-1" style="float: left;">Password</label>
                        <input type="password" name="password" class="form-control text-box login shadow-none"
                            id="exampleInputPassword1" placeholder="Password">
                    </div>
                    <br>
                    <div>
                        <a href="/changePassword" style="float: right; color: #222831; text-decoration: none;">Change password</a>
                        <br>
                        <% if (message.length> 0) { %>
                            <p class="mt-1 text-danger">
                                <%= message %>
                                    <% } %>
                    </div>
                    <button type="submit" class="btn btn-outline-danger text-box cursive"
                        style="margin-top: 20px;">Login</button>
                </form>
            </div>
        </div>
    </div>




    </body>

    </html>