<%- include('partials/navbar') %>

<div class="row" >
  <% if(courses[0].coursecode != null){ %>


  <% courses.forEach(function(course){ %>
    <div class=" col-xl-4 col-lg-4 col-md-6 col-sm-12" style="padding-bottom: 2%">
        <div class="box">
            <div class="box-top p-3">
                <a class="textdec h4" href="/student/<%= course.coursecode%>" style="color: #222831"><%= course.coursecode%>: <%=course.coursename%></a>
            </div>
            <div class="box-mid p-3">
                <div class="mt-3">
                    <div class="row">
                        <div class="col-sm">
                            <p class="h5"><a class=""
                            style="color: black; text-decoration: none;"
                             href="/student/<%= course.coursecode%>/attendance">Attendance</a></p>
                            <% if(course.count == null && course.Tcount == null) { %>
                              <p class="h5">0 / 0</p>
                            <% } else if(course.count == null){ %>
                              <p class="h5">0 / <%= course.Tcount%></p>
                            <% } else{ %>
                              <p class="h5"><%= course.count%> / <%= course.Tcount%></p>
                            <% } %>
                        </div>
                        <div class="col-sm pt-2">
                          <% var percent = (course.count/course.Tcount*100).toFixed(2) %>
                          <% if(course.count == null && course.Tcount == null) { %>
                            <p class="h4" id="attendancePercent">0 %</p>
                          <% } else { %>
                            <p class="h4" id="attendancePercent"><%= percent%> %</p>
                          <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-bottom p-4">
                <p class="h6">Faculty : <%= course.name%></p>
            </div>
        </div>
    </div>
  <% }) %>
    <% } %>
</div>
<%- include('partials/footer') %>
