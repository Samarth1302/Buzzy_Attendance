<%- include('partials/navbar') %>

<div class="row" >
  <% courses.forEach(function(course){ %>
    <div class=" col-xl-4 col-lg-4 col-md-6 col-sm-12" style="padding-bottom: 2%">
        <div class="box">
            <div class="box-top" >
                <a class="textdec h4" href="/student/<%= course.coursecode%>" style="color: #000000"><%= course.coursecode%>: <%=course.coursename%></a>
            </div>
            <div class="box-mid">
                <div class="mt-3" style="padding: 10px;">
                    <div class="row">
                        <div class="col-sm" style="padding-left: 30px;">
                            <p class="h5" style="margin-bottom: 0%;">Attendance</p>
                            <% if(course.count == null && course.Tcount == null) { %>
                              <p class="h5" style="margin-top: 0%; margin-left: 20px;">0 / 0</p>
                            <% } else if(course.count == null){ %>
                              <p class="h5" style="margin-top: 0%; margin-left: 20px;">0 / <%= course.Tcount%></p>
                            <% } else{ %>
                              <p class="h5" style="margin-top: 0%; margin-left: 20px;"><%= course.count%> / <%= course.Tcount%></p>
                            <% } %>
                        </div>
                        <div class="col-sm">
                          <% var percent = (course.count/course.Tcount*100).toFixed(2) %>
                          <% if(course.count == null && course.Tcount == null) { %>
                            <p class="h4" style="float: right; margin-top: 10px; margin-right: 15px;" id="attendancePercent">0 %</p>
                          <% } else { %>
                            <p class="h4" style="float: right; margin-top: 10px; margin-right: 15px;" id="attendancePercent"><%= percent%> %</p>
                          <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-bottom">
                <p class="h6" style="margin-left: 20px; margin-top: 25px;">Faculty : <%= course.name%></p>
            </div>
        </div>
    </div>
  <% }) %>
</div>
<%- include('partials/footer') %>
